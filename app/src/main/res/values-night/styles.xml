<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryRoundButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/round_purple_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/cera_round_bold</item>

    </style>

    <style name="OutlineRoundButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/round_outline_shape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cera_round_bold</item>
    </style>

    <style name="BoldBlackText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cera_round_bold</item>
    </style>

    <style name="RegularBlackText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cera_round_regular</item>

    </style>

    <style name="RegularGrayText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey80</item>
        <item name="android:fontFamily">@font/cera_round_regular</item>

    </style>

    <style name="StandardInputField" parent="Widget.AppCompat.EditText">
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/round_outline_shape</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:inputType">text</item>
    </style>
</resources>